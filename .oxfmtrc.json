{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "quoteProps": "consistent",
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "semi": false,
  "printWidth": 80,
  "ignorePatterns": [
    ".claude/**/*",
    "codegen/**/*",
    "post-script.cjs",
    "nitro.json"
  ]
}
